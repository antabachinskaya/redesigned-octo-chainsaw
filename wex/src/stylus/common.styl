.common-header__center,
.common-form__center
  display flex
  justify-content space-between
  align-items: center

.button-list
  text-align right
  &.button-list--center
    text-align center
		// FIX icon wrapper
		display: flex;
		justify-content: center
	&.button-list--fixed
    position: fixed
    bottom: 10vh
    left: 50%
    transform: translate(-50%, 0)
    z-index: 99
// ????
.button-icon__wrapper
	display flex
	align-items center
	svg
		margin-right 6px
// Input
.input--icon
  position: relative
  margin-bottom 20px

.input--svg
  display: flex
  position: absolute
  align-items: center
  height: 100%
  padding-left: 16px
  padding-right: 16px

.input--text
  padding: 16px 16px 16px 56px !important;
  margin-bottom: 0px;
  font-size: 16px;
  height: unset !important;

// Errors
.errors
  text-align: center
  color #fc5c65


// animation
.slide-fade-enter-active {
  transition: all .1s ease;
}
.slide-fade-leave-active {
  transition: all .1s cubic-bezier(.02,.01,.47,1);
}
.slide-fade-enter, .slide-fade-leave-to
/* .slide-fade-leave-active до версии 2.1.8 */ {
  transform: translateX(40px);
  opacity: 0;
}

//
//!FINDER
//
#finder__wrapper
	margin 10px auto
  padding: 30px 0
	min-width 400px
  code,pre
    display block
    margin-bottom 10px
    font 13px/16px Consolas,'Courier New',Courier,monospace
    border 1px dashed #ccc
    padding 5px
    overflow auto
  pre
    &.with-hljs
      padding 0
      code
        margin 0
        border 0
        overflow visible
  code.maxheight, pre.maxheight
	  max-height 512px
	.gray
		color #909399
	.ui-alert
		padding: 6px 20px!important
		opacity 1!important
		background-color: #8854d0
		&.ui-alert--ok
			background-color: #26de81
		&.ui-alert--error
			background-color: #fc5c65
		&.ui-alert--alert
			background-color: #fed330
			color: #333333;

.finder-info__wrapper
	display flex
	align-items center
	justify-content space-between

.ui-table
  &.ui-table--finder
    td
      padding: 4px 7px!important
      text-align: left
    th
      font-weight: 500
    td, th, a, span, p
      font-size 14px!important
    input[type="checkbox"]
      margin 0
      padding 0
		label
			margin-bottom 0

//! like search
.path
	padding 6px 11px
	margin-bottom 10px
	border 1px solid #ccc
	border-radius 7px
	background-color #fff

.finder-info__link
	padding 20px 0
	margin-bottom 16px
.finder-info__button
	text-align right

//! Common

.right
	text-align right
.center
	text-align center
.float-right
	float right

